{
  "manifest_version": 3,
  "name": "Workday Course Formatter",
  "version": "1.0",
  "description": "Extracts course listings from Workday and displays them in a formatted way.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.myworkday.com/wustl/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.myworkday.com/wustl/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["newtab.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
